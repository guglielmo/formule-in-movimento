---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  theme: 'matematica' | 'fisica';
}

const { title, subtitle, description, theme } = Astro.props;

// Determine section URL and name based on theme
const sectionUrl = `/${theme}`;
const sectionName = theme === 'matematica' ? 'Matematica' : 'Fisica';
---

<BaseLayout title={title} description={description} theme={theme}>
  <Header
    title={title}
    subtitle={subtitle}
    useIconLogo={true}
    logoSize="small"
  />

  <div class="container">
    <slot />
  </div>

  <div class="back-to-section">
    <a href={sectionUrl} class="back-button">
      ‚Üê Torna alla sezione {sectionName}
    </a>
  </div>

  <Footer />
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .back-to-section {
    max-width: 1200px;
    margin: 40px auto 20px;
    padding: 0 20px;
    text-align: center;
  }

  .back-button {
    display: inline-block;
    padding: 12px 24px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.1em;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .back-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
  }

  .back-button:active {
    transform: translateY(0);
  }
</style>
